<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/r1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热议"
            android:textSize="9sp"
            android:padding="3dp"
            android:background="@drawable/textview_border"
            android:layout_marginRight="6dp"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/r1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/r1_tv1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="心疼S7 edge 三星官方‘虐机’视频上线"
            android:maxLines="1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_r2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/r2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热评"
            android:padding="3dp"
            android:textSize="9sp"
            android:background="@drawable/textview_border"
            android:layout_marginRight="6dp"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/r2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/r2_tv1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="美剧《行尸走肉》上线Steam 每一集售价2.99..."
            android:maxLines="1" />
    </RelativeLayout>

</LinearLayout>
